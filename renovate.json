{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "docker": {
    "pinDigests": true
  },
  "packageRules": [
    {
      "matchDatasources": ["docker"],
      "matchPackageNames": ["*"],
      "groupName": "docker images"
    }
  ],
  "fileMatch": ["(^|/)(Dockerfile(\\.[^/]+)?)$"]
}
